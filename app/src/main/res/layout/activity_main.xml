<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_alignParentTop="true"
	android:layout_alignParentBottom="true"
	android:background="@drawable/voiceprescription"
	android:clipToPadding="true"
	tools:context=".MainActivity">


	<EditText
		android:id="@+id/sres"
		android:layout_width="250dp"
		android:layout_height="66dp"
		android:layout_alignParentStart="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="44dp"
		android:background="#00FFFFFF"
		android:ems="10"
		android:gravity="start|top"
		android:visibility="visible"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.634"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:visibility="visible" />

	<EditText
		android:id="@+id/editText8"
		android:layout_width="271dp"
		android:layout_height="163dp"
		android:layout_marginTop="52dp"
		android:layout_marginEnd="8dp"
		android:layout_marginRight="8dp"
		android:background="#00FFFFFF"
		android:ems="10"
		android:fontFamily="@font/gadugi"
		android:gravity="start|top"
		android:inputType="textMultiLine"
		android:textSize="21sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.757"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/editText10"
		tools:ignore="LabelFor" />


	<EditText
		android:id="@+id/editText9"
		android:layout_width="228dp"
		android:layout_height="42dp"
		android:layout_marginTop="176dp"
		android:background="#00FFFFFF"
		android:ems="10"
		android:fontFamily="@font/gadugi"
		android:inputType="textPersonName"
		android:textSize="21sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.779"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/sres"
		tools:ignore="LabelFor" />

	<EditText
		android:id="@+id/editText10"
		android:layout_width="230dp"
		android:layout_height="42dp"
		android:layout_marginTop="210dp"
		android:layout_marginEnd="8dp"
		android:layout_marginRight="8dp"
		android:background="#00FFFFFF"
		android:ems="10"
		android:fontFamily="@font/gadugi"
		android:inputType="textPersonName"
		android:textSize="21sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.819"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/sres"
		tools:ignore="LabelFor" />

	<EditText
		android:id="@+id/patient_details"
		android:layout_width="204dp"
		android:layout_height="44dp"
		android:layout_marginTop="135dp"
		android:background="#00FFFFFF"
		android:ems="10"
		android:fontFamily="@font/gadugi"
		android:inputType="textPersonName"
		android:textSize="21sp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.809"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/sres"
		tools:ignore="LabelFor" />

	<Button
		android:id="@+id/button"
		android:layout_width="125dp"
		android:layout_height="35dp"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true"
		android:layout_marginEnd="16dp"
		android:layout_marginRight="16dp"
		android:layout_marginBottom="25dp"
		android:background="@drawable/analyze"


		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/editText8"
		app:layout_constraintVertical_bias="0.814" />

	<ImageView
		android:id="@+id/btnSpeak"
		android:layout_width="120dp"
		android:layout_height="40dp"
		android:layout_alignParentStart="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="25dp"
		android:layout_toStartOf="@+id/button"
		android:layout_toLeftOf="@+id/button"
		android:contentDescription="@string/todo"
		android:gravity="center"
		android:onClick="getSpeechInput"
		android:src="@drawable/speek"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@+id/button"
		app:layout_constraintHorizontal_bias="0.229"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/editText8"
		app:layout_constraintVertical_bias="0.815" />


</android.support.constraint.ConstraintLayout>





